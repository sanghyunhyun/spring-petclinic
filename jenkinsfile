pipeline {
  agent any

  tools {
    jdk 'jdk17'
    maven 'M3'
  }

  stages {
    stage('Git Clone') {
      steps {
        git url : https://github.com/sanghyunhyun/spring-petclinic.git/
    }
  }
  stages('Maven Build') {
    steps {
      sh 'mvn -Dmaven.test.failure.ignore=true clean package'
    }
  }
  stage('Docker Image') {
    steps {
      dir("${env.WORKSPACE}") {
        sh """
          docker build -t chosshh/spring-petclinic:$BUILD_NUMBER
          docker tag -t chosshh/spring-petclinic:$BUILD_NUMBER chosshh/spring-petclinic:latest
        """
